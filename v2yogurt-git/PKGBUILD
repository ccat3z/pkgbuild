# Maintainer: Felix Yan <felixonmars@archlinux.org>
# Contributor: pandada8 <pandada8@gmail.com>

_repo="ccat3z/v2yogurt"
pkgname=v2yogurt-git
pkgver=1.0.0.r0.g65b1633
pkgrel=1
pkgdesc="A platform for building proxies to bypass network restrictions"
arch=('x86_64')
url="https://github.com/${_repo}"
license=('MIT')
depends=('glibc' 'v2ray-domain-list-community' 'v2ray-geoip')
makedepends=('go-pie' 'git')
provides=(v2ray)
conflicts=(v2ray)
source=("$pkgname::git+ssh://git@github.com/${_repo}.git"
        'v2ray.service')
sha512sums=('SKIP'
            '79192646438bcbd13a5a88d0093b1b6d5df603a9c2241a6260babf16f9e98d75f9e04fb3a1d926eb809a81fa935d3ff47d39cc703c609dfc906146ca58272bc7')

pkgver() {
  cd "$srcdir"/$pkgname

  # cutting off 'v' prefix that presents in the git tag
  git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

build() {
  cd "$srcdir"/$pkgname

  go build -trimpath \
    -ldflags "-extldflags ${LDFLAGS}" \
    -o "$srcdir"/v2ray github.com/ccat3z/v2yogurt/cmd
}

package() {
  cd "$srcdir/$pkgname"
  install -Dm755 "$srcdir"/v2ray -t "$pkgdir"/usr/lib/v2ray/
  install -dm755 "$pkgdir"/usr/bin
  ln -s ../lib/v2ray/v2ray "$pkgdir"/usr/bin/v2ray

  install -Dm644 "$srcdir"/v2ray.service "$pkgdir"/usr/lib/systemd/system/v2ray@.service
}
